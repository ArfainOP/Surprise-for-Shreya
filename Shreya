  <div class="container">
    <h1>Hey, click the button!</h1>
    <button class="btn" onclick="showSurprise()">Click Me!</button>
    <div class="surprise-message" id="message">
      <h1>ðŸŽ‰ Happy Birthday! ðŸŽ‰</h1>
      <p>Youâ€™re an amazing friend, and I hope your day is as special as you are! ðŸ¥°</p>
    </div>
    <div class="confetti" id="confetti"></div>
  </div>

  <script>
    function showSurprise() {
      document.getElementById("message").classList.add("show-message");
      generateConfetti();
    }

    function generateConfetti() {
      const confettiContainer = document.getElementById("confetti");
      for (let i = 0; i < 100; i++) {
        const confettiPiece = document.createElement("div");
        confettiPiece.className = "confetti-piece";
        confettiPiece.style.left = Math.random() * 100 + "vw";
        confettiPiece.style.animationDelay = Math.random() * 3 + "s";
        confettiPiece.style.backgroundColor =
          `hsl(${Math.random() * 360}, 100%, 70%)`;
        confettiContainer.appendChild(confettiPiece);
      }
    }
  </script>
